@model ContactModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header text-center">
        <h2>Delete contact</h2>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-around align-items-center">
            <div class="w-50">
                <form asp-action="Delete" asp-controller="Contact" method="post">
                    <input asp-for="ContactId" type="hidden" class="form-control">

                    <div class="alert alert-danger" role="alert">
                        Are you sure to delete the contact: @Html.DisplayTextFor(m => m.Name)? 
                    </div>

                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</button>
                    <a asp-action="List" asp-controller="Contact" class="btn btn-secondary"> <i class="bi bi-arrow-return-left"></i> Back to list</a>
                </form>
            </div>
        </div>

    </div>
</div>

